@model UserRegistrationModel
@{
    ViewData["Title"] = "Регистрация";
}
<link rel="stylesheet" href="~/css/FormStyle.css" asp-append-version="true" />

<div class="main_content">
    <p class="text-center">Регистрация</p> <hr />
    <form method="post" >
        <p>
            <label asp-for="UserName"></label><br />
            <input type="text" asp-for="UserName" class="input_field" />
            <span asp-validation-for="UserName"></span>
        </p>
        <p>
            <label asp-for="UserSurname"></label><br />
            <input type="text" asp-for="UserSurname" class="input_field" />
            <span asp-validation-for="UserSurname"></span>
        </p>
        <p>
            <label asp-for="Login"></label><br />
            <input type="text" asp-for="Login" class="input_field" />
            <span asp-validation-for="Login"></span>
        </p>
        <p>
            <label asp-for="Password"></label><br />
            <input type="password" asp-for="Password" class="input_field" />
            <span asp-validation-for="Password"></span>
        </p>
        <p>
            <label asp-for="ConfirmPassword"></label><br />
            <input type="password" asp-for="ConfirmPassword" class="input_field" />
            <span asp-validation-for="ConfirmPassword"></span>
        </p>
        <div asp-validation-summary="ModelOnly"></div>
        <input type="submit" value="Зарегистрироваться" class="form_button" />
    </form>
</div>

<script src="https://ajax.aspnetcdn.com/ajax/jQuery/jquery-3.5.1.min.js"></script>
<script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/1.17.0/jquery.validate.min.js"></script>
<script src="https://ajax.aspnetcdn.com/ajax/jquery.validation.unobtrusive/3.2.10/jquery.validate.unobtrusive.min.js"></script>
