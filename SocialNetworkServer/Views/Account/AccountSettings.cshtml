@model AccountSettingsModel
@{
}
@await Html.PartialAsync("UserInfoSettings")
<script>
    // Данные для отправки на сервер
    const userData = {
        userName: "Новое имя",
        userSurname: "Новая фамилия"
    };

    // Адрес сервера и маршрута для отправки PUT-запроса
    const url = '/Account/ChangeUserInfo';

    // Опции запроса
    const options = {
        method: 'PUT',
        headers: {
            'Content-Type': 'application/json'
        },
        body: JSON.stringify(userData)
    };
    console.log(JSON.stringify(userData))
    // Отправляем PUT-запрос на сервер с помощью fetch
    fetch(url, options)
        .then(response => {
            if (!response.ok) {
                throw new Error('Произошла ошибка при выполнении запроса');
            }
            return response.json();
        })
        .then(data => {
            console.log('Успешно обновлено:', data);
        })
        .catch(error => {
            console.error('Ошибка:', error.message);
        });
</script>
