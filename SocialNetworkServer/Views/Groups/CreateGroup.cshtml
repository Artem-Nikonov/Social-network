@using SocialNetworkServer.SocNetworkDBContext.Entities;
@model GroupInfoModel
@{
    ViewData["Title"] = "Новая группа";
}
<link rel="stylesheet" href="~/css/FormStyle.css" asp-append-version="true" />
<div class="main_content">
    <div>
        <h2 class="text-center underlined_title">Новая группа</h2>
    </div>
    <form method="post">
        <p>
            <label asp-for="GroupName"></label><br />
            <input type="text" asp-for="GroupName" class="input_field" />
            <span asp-validation-for="GroupName"></span>
        </p>
        <p>
            <label asp-for="Description"></label><br />
            <textarea asp-for="Description" class="custom_textarea"></textarea><br/>
            <span asp-validation-for="Description"></span>
        </p>
        <p>
            <label asp-for="PostPermissions"></label><br />
            <select asp-for="PostPermissions" asp-items="Html.GetEnumSelectList<PostPermissions>()" class="select_field"></select>
        </p>
        <div asp-validation-summary="ModelOnly"></div>
        <input type="submit" value="Создать группу" class="custom_button" />
        <span asp-validation-for="PostPermissions"></span>
    </form>
</div>

<script src="https://ajax.aspnetcdn.com/ajax/jQuery/jquery-3.5.1.min.js"></script>
<script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/1.17.0/jquery.validate.min.js"></script>
<script src="https://ajax.aspnetcdn.com/ajax/jquery.validation.unobtrusive/3.2.10/jquery.validate.unobtrusive.min.js"></script>