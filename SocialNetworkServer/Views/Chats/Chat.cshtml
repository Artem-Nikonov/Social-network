@model ChatInfoModel
<link rel="stylesheet" href="~/css/FormStyle.css" asp-append-version="true" />
<link rel="stylesheet" href="~/css/ChatStyle.css" asp-append-version="true" />
<div id="meta">
    <span id="chatId" data="@Model.ChatId"></span>
</div>

<div class="main_content">
    <div>
        <h3 id="chatName" class="underlined_title">@Model.ChatName</h3>
    </div>
    <div id="mainPanel" class="fixed_panel">
        <input id="userId" type="text" placeholder="ID пользователя" class="input_field" />
        <button id="addUserBtn" class="custom_button">Добавить пользователя</button>
    </div>

    <div id="chatroom">

    </div>

    <div id="sendPanel" class="fixed_panel">
        <input type="text" id="message" class="long_input_field" />
        <input type="button" id="sendBtn" value="Отправить" disabled="disabled" class="custom_button" />
    </div>
    
</div>


<script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/6.0.1/signalr.js"></script>

<script src="/js/Chat.js" asp-append-version="true"></script>